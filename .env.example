# Core Configuration
AGENT_NAME=docker-ai-agent
MODEL_TYPE=llama
MODEL_PATH=/app/models/llama-3.2-hf
TRAINING_MODE=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Database Configuration
DATABASE_URL=postgresql://user:password@db:5432/docker_ai
DATABASE_MIN_CONNECTIONS=5
DATABASE_MAX_CONNECTIONS=20

# Training Configuration
TRAINING_BATCH_SIZE=16
TRAINING_EPOCHS=5
TRAINING_SAVE_STEPS=500
TRAINING_WARMUP_STEPS=1000

# GPU Configuration
CUDA_VISIBLE_DEVICES=0,1,2,3
GPU_MEMORY_ALLOCATION=8GB

# File Storage
STORAGE_PATH=/app/data
MODEL_STORAGE_PATH=/app/models
TRAINING_DATA_PATH=/app/training

# Security Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRY_HOURS=24
API_KEY=your-api-key-here

# Optional Features
ENABLE_METRICS=true
ENABLE_LOGGING=true
LOG_LEVEL=INFO
METRICS_PORT=8000

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=0.0.0.0